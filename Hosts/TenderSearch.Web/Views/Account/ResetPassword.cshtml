@model ResetPasswordViewModel

@Html.Partial("_Logo")

<h2>@Model.Title1</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Reset your password</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ResetPasswordModel.Code)
    <div class="form-group">
        @Html.LabelFor(m => m.ResetPasswordModel.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ResetPasswordModel.Email, new { @class = "form-control eml-form-control", @autofocus = "autofocus" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResetPasswordModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ResetPasswordModel.Password, new { @class = "form-control eml-form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResetPasswordModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ResetPasswordModel.ConfirmPassword, new { @class = "form-control eml-form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

