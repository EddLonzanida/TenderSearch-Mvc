@model RegisterViewModel

@Html.Partial("_Logo")

<h2>@Model.Title1</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterModel.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterModel.UserName, new { @class = "form-control eml-form-control", @autofocus = "autofocus" })
            <span class="text-danger">ex: John<strong>.</strong>Doe</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterModel.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterModel.Email, new { @class = "form-control eml-form-control"})
            <span class="text-danger">ex: john<strong>.</strong>doe@TenderSearch.com</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterModel.Password, new { @class = "form-control eml-form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterModel.ConfirmPassword, new { @class = "form-control eml-form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Back to Login", "Login")
</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

