@model IPagedList<AspNetUserRole>
@{
    ViewBag.ReturnUrl = ViewData["ReturnUrl"];
    ViewBag.ParentId = ViewData["ParentId"];//optional for child models only
    ViewBag.AllowCreate = false;
    if (Model.Count == 0)
    {
        ViewBag.AllowCreate = true;
    }
}

@Html.Partial("_LayoutIndex",
                Model,
                new ViewDataDictionary {{ "Title", ViewBag.Title },
                                        { "ReturnUrl", ViewBag.ReturnUrl },
                                        { "ParentId", ViewBag.ParentId },
                                        { "ParentLabel", ViewBag.ParentLabel },
                                        { "ParentSubLabel", ViewBag.ParentSubLabel },
                                        { "searchTerm", ViewBag.searchTerm },
                                        { "AllowCreate", false},
                                        { "PAGE_SIZE", ViewBag.PAGE_SIZE},
                                        { "ReturnToParentListURL", ViewBag.ReturnToParentListURL }}
                )

@Html.Partial("_LayoutIndex")